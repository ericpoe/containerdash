# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
charset = utf-8

[*.md]
trim_trailing_whitespace = false

[*.php]
indent_size = 4

[*.{js,jsx,ts,tsx,vue}]
max_line_length = 100
